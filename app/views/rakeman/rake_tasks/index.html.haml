=link_to('Update tasks list', update_tasks_list_path)
%table{border: 1}
  %thead
    %tr
      - %w[Task Description Done Actions].each do |header|
        %td= header
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.done
        %td
          .table_actions
            -if task.done?
              = link_to('Mark as undone', mark_as_undone_path(task))
            -else
              = link_to('Mark as done', mark_as_done_path(task))
              = link_to('Run task', execute_task_path(task))
